{% import 'works.njk' as wks %}

{% macro html(works, bio, status)%}
<main data-view="columns">
  <section class="work">
    <ul class="published">
      <li class="category">Short Fiction, Poems</li> 
        {% for work in works %}
          {% if work.type == 'published' %}
            {{ wks.published(work) }}
          {% endif %}  
        {% endfor %}
    </ul>
    <ul class="perf-col">
      <li class="category">Movement, Performance, Workshop</li>
      {% for work in works %}
        {% if work.type == 'movement' %}
            {{ wks.movement(work) }}
        {% endif %}  
      {% endfor %}
    </ul>
    {% if status == "prelaunch" %}
      <ul class="placeholder">
        <li class="category"> </li>
      </ul>
      <ul class="placeholder">
        <li class="category"> </li>
      </ul>
    {% else %}
      <ul class="proj-col">
        <li class="category">Writing, Projects</li>
        <div class="sticky">
        {% for work in works %}
          {% if work.type == 'project' %}
              {{ wks.project(work) }}
          {% endif %}  
        {% endfor %}
        </div>
      </ul>
      <ul class="writ-col">
        <li class="category"></li>
        {% for work in works %}
          {% if work.type == 'book' %}
             {{ wks.book(work) }}
          {% endif %}  
        {% endfor %}
      </ul>
    {% endif %}
  </section>


  <section class="info">
    <p>{{ bio | safe }}</p>
    <div class="bar">
      <div class="item">
        <div class="link">
          <a href="https://www.instagram.com/bohwang__/" target="_blank">@bohwang__</a>
        </div>
      </div>
      <div class="item">
        <div class="link">
          <a href="mailto:bo.j.hwang@gmail.com">contact</a>
        </div>
      </div>
      <div class="item">
        <div class="more credits">
          <span>credits</span>
        </div>
        <div class="expansion credits hide">
          <span>The image above <i>Visit to Makon</i> was created by <a href='https://sometimes-always.com/' target='_blank'>Sometimes Always</a> for <a href='https://publicrecords.nyc/' target='_blank'>Public Record</a>â€™s launch of The Nursery. All other images are from the artist, venue or publisher, and friends.</span>
        </div>
      </div>
    </div>
  </section>

</main>

<script type="text/javascript">
  let more = document.querySelector('.more');

  more.addEventListener("click", function (e) {
    let el=e.currentTarget;
    let ex=el.nextElementSibling;
    {# let bar=el.parentElement.parentElement; #}

    if(!ex.classList.contains('hide')) {
        ex.classList.add('hide');
    }else{
        ex.classList.remove('hide');
    }  
  });

</script>
{% endmacro %}

